@using MvcTicariOtomasyon.Models.Siniflar;
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        
        <th>Seri No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Güncelleme</th>

        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>

            <td>@k.FaturaSeriNumara @k.FaturaSiraNo</td>

            <td>@k.Tarih</td>
            <td>@k.Saat</td>
         
            <td>@k.ToplamTutar ₺</td>



            <td><a href="/Fatura/FaturaGetir/@k.FaturaId" class="btn btn-warning">Güncelle</a></td>
            <td>
                <a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-default" style="background-color:lightcoral;color:white">
                    Detaylar
                </a>
            </td>
            <td>
                <a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-default" style="background-color:thistle;color:white">
                    Kalem
                </a>
            </td>


        </tr>
    }
</table>

<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:#d95151;color:white" data-toggle="modal" data-target="#Modal1" >
    Popup Penceresi
</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                    <tr>
                        <td>@x.FaturaSeriNumara</td>
                        <td>@x.FaturaSiraNo</td>
                        <td>@x.ToplamTutar</td>
                    </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
          
            </div>
        </div>

    </div>
</div>
